"" Global settings
set fileencoding=utf8
filetype plugin on
filetype indent on
filetype on

" set line length for all files at 78
autocmd FileType text setlocal textwidth=78

" important settings
set incsearch
set ignorecase
set hlsearch
set nocompatible
set bs=2
set number
set softtabstop=2
set shiftwidth=2
set tabstop=2
set expandtab
noremap <C-a> ^
noremap <C-e> $
ino jj <esc>
cno jj <c-c>
nnoremap <D-d> <C-w>v<C-w>l
nnoremap <D-D> <C-w>s<C-w>j
" make tab key more better
noremap <tab> v>
noremap <s-tab> v<
vnoremap <tab> >gv
vnoremap <s-tab> <gv

set background=dark
