# vi: ft=gitconfig
[user]
  email = lukasz@coffeesounds.com
  name = Łukasz Korecki
[github]
  username = lukaszkorecki
  user = lukaszkorecki
[color]
  ui = true
  diff = true
[core]
  pager = less -F -X

[push]
  default = current

[alias]
  c = commit
  cm = commit -m
  co = checkout
  g = !git --no-pager grep --color -n
  l = log
  lo = log --graph --oneline --abbrev-commit
  ll = log --graph --pretty='format:%h | %an | %s'
  pr = pull --rebase
  pull-all = pull --recurse-submodules -r
  s = status
  d = diff
  dc = diff --cached
  serve = daemon --reuseaddr --verbose  --port=4000 --base-path=. --export-all ./.git
  cb = !git symbolic-ref HEAD 2>/dev/null | awk -F/ '{ print $3}'
  edit-modified = !vim -p $(git ls-files -m )
  push-and-track= !git push -u origin $(git cb)
  safe-pull = !git stash && git pull -r origin $(git cb) && git stash pop

  # imported
  hist = log --pretty=format:'%Cred%h%Creset %C(bold blue)<%an>%Creset%C(yellow)%d%Creset %Cgreen(%cr)%Creset%n%w(80,8,8)%s' --graph
  histfull = log --pretty=format:'%Cred%h%Creset %C(bold blue)<%an>%Creset%C(yellow)%d%Creset %Cgreen(%cr)%Creset%n%w(80,8,8)%s%n' --graph --name-status
  llog = log --pretty=format:'%C(yellow)%h %Cred%ad %Cblue%an%Cgreen%d %Creset%s' --date=iso
  changelog = log --pretty=format:'%Cgreen%d %Creset%s' --date=iso
[branch]
  autosetupmerge = true
