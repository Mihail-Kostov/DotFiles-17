[user]
# vi: ft=gitconfig
  email = lukasz@coffeesounds.com
  name = Łukasz Korecki
[github]
  username = lukaszkorecki
  user = lukaszkorecki
[color]
  ui = true
  diff = true
[core]
  pager = less -F -X
[grep]
  linenumber = true
  extendedRegexp = true

[push]
  default = current

[alias]
  c = commit
  cm = commit -m
  co = checkout
  g = !git --no-pager grep --color -n
  l = log
  lo = log --graph --oneline --abbrev-commit
  ll = log --graph --pretty='format:%h | %an | %s'
  pr = pull --rebase
  pull-all = pull --recurse-submodules -r
  s = status
  m = merge --no-ff

  d = diff
  dc = diff --cached
  wd = diff --color-words
  wdc = diff --color-words --cached

  serve = daemon --reuseaddr --verbose  --port=4000 --base-path=. --export-all ./.git

  cb = !git symbolic-ref HEAD 2>/dev/null |  sed "s/refs.heads.//"
  edit-modified = !vim -p $(git ls-files -m )
  push-and-track= !git push -u origin $(git cb)
  safe-pull = !git stash && git pull -r origin $(git cb) && git stash pop

  recent-branches = !git for-each-ref --sort=-committerdate refs/heads/ | sed 's/commit.*refs.heads.//'

  llog = log --pretty=format:'%C(yellow)%h %Cred%ad %Cblue%an%Cgreen%d %Creset%s' --date=iso
  changelog = log --pretty=format:'%Cgreen%d %Creset%s' --date=iso
[branch]
  autosetupmerge = true
